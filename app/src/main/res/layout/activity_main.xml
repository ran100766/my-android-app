<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <!-- Top info: speed, direction, coords -->
    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speed: 0.0 knots"
        android:textSize="18sp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/tvDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Direction: 0Â°"
        android:textSize="18sp"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/tvCoords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lat: 0.00000, Lng: 0.00000"
        android:textSize="16sp"
        android:padding="4dp"/>

    <!-- Compass in center -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="20dp">

        <!-- Compass background -->
        <ImageView
            android:id="@+id/compassBackground"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/compass_circle"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/directionArrow"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/arrow"
            android:layout_gravity="center"
            android:rotation="0"/>
    </FrameLayout>


    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Implemented by : Ran Teshuva"
        android:textSize="14sp"
        android:padding="8dp"/>


</LinearLayout>